<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
  <id>package</id>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>${basedir}/src/main/yaml</directory>
      <includes>
        <include>*.yaml</include>
      </includes>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${basedir}/src/main/script</directory>
      <includes>
        <include>*.sh</include>
        <include>*.cmd</include>
      </includes>
      <outputDirectory>/</outputDirectory>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>src/main/yaml/product.yaml</source>
      <filtered>true</filtered>
    </file>
    <file>
      <source>src/main/yaml/api.yaml</source>
      <filtered>true</filtered>
    </file>
    <file>
      <source>src/main/script/install.sh</source>
      <filtered>true</filtered>
    </file>
    <file>
      <source>src/main/js/Sandbox${artifactId}Config.js</source>
      <filtered>true</filtered>
      <destName>Sandbox${artifactId}Config-${api.version}.js</destName>
    </file>
  </files>
</assembly>